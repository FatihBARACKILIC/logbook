---
import { cn } from "@/lib/utils/cn";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"tfoot"> & {};

const { class: className, ...attr } = Astro.props;
---

<tfoot class={cn("border-t bg-muted/50 font-medium [&>tr]:last:border-b-0", className)} {...attr}>
  <slot />
</tfoot>
